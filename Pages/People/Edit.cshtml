@page
@model WebDönemProjesi.Pages.People.EditModel
@{
}

<br>
 
<h2>Kişi Düzenle</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
         <button type="button" class="btn-close" data-bs-dismiss="alert" aira-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.personInfo.Id"/>
	<div class="form-group my-2" style="width: 700px;">
        <label class="col-sm-3 col-form-label"style="font-weight:bold">İsim</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.personInfo.Isim"/>
        </div>
    </div>
    <div class="form-group my-2" style="width: 700px;">
        <label class="col-sm-3 col-form-label"style="font-weight:bold">Soyisim</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="surname" value="@Model.personInfo.Soyad"/>
        </div>
    </div>
    <div class="form-group my-2" style="width: 500px;">
        <label class="col-sm-3 col-form-label"style="font-weight:bold">Doğum Tarihi</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="birthDate" value="@Model.personInfo.DogumTarihi"/>
        </div>
    </div>
    <div class="form-group my-2" style="width: 500px;">
        <label class="col-sm-3 col-form-label"style="font-weight:bold">Cinsiyet</label>
        <div class="col-sm-6">
            <select class="form-control" name="gender">
                <option value="Erkek" selected="@(Model.personInfo.Cinsiyet == "Erkek" ? "selected" : null)">Erkek</option>
                <option value="Kadın" selected="@(Model.personInfo.Cinsiyet == "Kadın" ? "selected" : null)">Kadın</option>
            </select>
        </div>
    </div>
    <div class="form-group my-2" style="width: 300px;">
        <label for="Foto" style="font-weight: bold;">Fotoğraf:</label>
        <div class="col-sm-6">
            <input type="file" class="form-control-file" name="image" value="@Model.personInfo.Fotograf"/>
        </div> 
    </div>

    @if (Model.successMessage.Length > 0)
{
    <div class ="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert-success alert-dismissible fade show' role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aira-label="Close"></button>
    </div>
        </div>
    </div>
    
}

    <div class="form-group my-2" style="width: 300px;">
        <button type="submit" class="btn btn-primary">Kişi Ekle</button>
    </div>



</form>